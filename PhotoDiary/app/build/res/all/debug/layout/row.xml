<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RelativeLayout01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff7ba7a7"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_width="fill_parent">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_gravity="top"
            ></ImageView>

        <TableLayout
            android:id="@+id/TableLayout01"
            android:layout_below="@+id/LinearLayout01"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_width="fill_parent"
            android:background="@drawable/fadetop">

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:id="@+id/txt_titel"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_span="2"
                    android:lines="1"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:text="@string/Wann"
                    android:id="@+id/TextView02"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_width="fill_parent"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:id="@+id/txt_wann"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/TableRow02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:text="@string/Wo"
                    android:id="@+id/TextView02"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    android:lines="1"

                    android:id="@+id/txt_wo"></TextView>
            </TableRow>


            <TableRow
                android:id="@+id/TableRow05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:paddingRight="10dp"
                    android:id="@+id/TextView03"></TextView>

                <TextView
                    android:layout_toRightOf="@+id/TableLayout01"
                    android:layout_below="@+id/LinearLayout01"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:id="@+id/txt_src"></TextView>
            </TableRow>
        </TableLayout>


    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/mrmac/Documents/github/Source-Buch/Android_lernen_am_Beispiel/PhotoDiary/app/src/main/res/layout/row.xml -->